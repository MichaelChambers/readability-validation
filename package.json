{
  "name": "readability-validation",
  "version": "1.0.0",
  "description": "Adds current readability grade level display and validation to existing textareas or empty elements. Optional highlighted difficulty feedback by sentence or paragraph.",
  "license": "MIT",
  "keywords": [
    "automated",
    "readability",
    "coleman",
    "liau",
    "dale",
    "chall",
    "flesch",
    "kincaid",
    "gunning",
    "fog",
    "smog",
    "spache",
    "formula",
    "index"
  ],
  "repository": "MichaelChambers/readability-validation",
  "bugs": "https://github.com/MichaelChambers/readability-validation/issues",
  "author": "Michael Chambers <chamicr@gmail.com>",
  "contributors": [
    "Michael Chambers <chamicr@gmail.com>",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "compute-mean": "^3.0.0",
    "debounce": "^1.0.0",
    "global": "^4.0.0",
    "lerp": "^1.0.0",
    "readability-scores": "^1.0.4",
    "retext-english": "^3.0.0",
    "retext-stringify": "^2.0.4",
    "unified": "^9.0.0",
    "unlerp": "^1.0.0",
    "virtual-dom": "^2.0.0",
    "xtend": "^4.0.0"
  },
  "devDependencies": {
    "bootstrap": "~3.4.1",
    "browserify": "^16.0.0",
    "jquery": "^3.5.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.5",
    "remark-cli": "^8.0.0",
    "remark-preset-wooorm": "^7.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.28.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s readabilityValidation -o readability-validation.js",
    "build-mangle": "browserify . -s readabilityValidation -p tinyify -o readability-validation.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage",
    "copy-to-dest": "xcopy /I /Y src dest && xcopy /Y readability-validation.min.js dest && xcopy /Y node_modules\\bootstrap\\dist\\css\\bootstrap.min.css dest && xcopy /Y node_modules\\bootstrap\\dist\\js\\bootstrap.min.js dest && xcopy /Y node_modules\\jquery\\dist\\jquery.min.js dest",
    "serve": "npm run format && npm run build && npm run copy-to-dest && http-server ./dest"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "quoteProps": "as-needed",
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignores": [
      "readability-validation.js"
    ],
    "rules": {
      "unicorn/prefer-node-append": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
